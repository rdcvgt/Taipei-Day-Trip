/* Components */
.hr
	width: 1200px
	border:1px solid #E8E8E8
	// margin-top: 37px
	position: relative

.confirmBtn
	padding: 10px 20px 10px 20px
	border: 0px
	background-color $primary70
	border-radius: 5px
	color: #ffffff
	width: 154px
	height: 36px
	cursor: pointer
	transition: 0.2s
	display:flex
	justify-content: center
	align-items:center
	line-height: 0 
	
	&:hover
		filter: brightness(1.3);
		transition: 0.2s

.input
	outline-style: none
	border: 1px solid #E8E8E8
	padding: 10px
	border-radius: 5px
	transition: 0.1s

	&:focus
		transition: 0.1s
		border: 2px solid #1a73e8

/* skeleton */
.skeleton
	animation: skeleton-loading 1s linear infinite alternate


@keyframes skeleton-loading 
	0%
		background-color: hsl(200, 20%, 70%)
	100%
		background-color: hsl(200, 20%, 95%)

/* RWD */
@media (max-width: 1200px)
	.hr
		width: 90%



