	font-weight: 500;
	line-height: 1.5em


/* Components */
.hr
	width: 1200px
	border:1px solid #E8E8E8
	// margin-top: 37px
	position: relative

.confirmBtn
	padding: 10px 20px 10px 20px
	border: 0px
	background-color $primary70
	border-radius: 5px
	color: #ffffff
	width: 154px
	height: 36px
	cursor: pointer
	transition: 0.2s
	display:flex
	justify-content: center
	align-items:center 
	
	&:hover
		filter: brightness(1.3);
		transition: 0.2s

/* RWD */
@media (max-width: 1200px)
	.hr
		width: 90%



