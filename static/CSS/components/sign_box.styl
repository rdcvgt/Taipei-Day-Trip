@import "../components/base.styl"

/* signIn */
.boxBG
	display: none
	z-index: 3
	width: 100%
	height: 100%
	background: rgba(0,0,0,0.25)
	position: absolute
	top: 0

.boxContainer
	z-index: 4
	position: absolute

.boxForSignUp
	display: none

.boxForSignIn
	display: none

.box
	width: 340px;
	height: auto;
	border-radius: 6px;
	background: #FFFFFF;
	box-shadow: 0px 4px 60px #AAAAAA;

	margin: 0 auto
	left: 50%
	transform: translate(-50%, 0)
	position: fixed
	top: 80px

	display: flex
	flex-wrap: wrap
	justify-content: center
	align-items: center

	overflow: hidden

.boxTopBar
	width: 100%
	height: 10px
	position: absolute
	top: 0
	background: linear-gradient(270deg, #337788 0%, #66AABB 100%);

.boxTitle
	color: $secondary70
	margin: 25px 15px 15px 15px

.boxCloseBtn
	position: absolute
	top: 27px
	right: 17px
	width: 25px
	height: 25px
	cursor pointer

.boxForm
	display: flex
	flex-wrap: wrap
	justify-content: center
	align-items: center

	.input
		height: 47px;
		width: 310px;
		padding: 15px;
		color: $secondary50
		margin-bottom: 10px

	.Btn
		background: #448899;
		border-radius: 5px;
		height: 47px;
		width: 310px;
		border-radius: 5px;
		outline-style: none
		border: 0
		color: #ffffff
		cursor pointer

	.goToText
		color: $secondary70
		margin:  10px 15px 15px 15px

	.goToBtn
		color: $secondary70
		text-decoration: none
		cursor pointer
		transition: 0.2s
		&:hover
			filter: brightness(1.5);
			transition: 0.2s