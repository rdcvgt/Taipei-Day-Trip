@import "../components/base.styl"

*
	box-sizing: border-box

body
	position:relative

/* section */
.section
	margin-top: 91px
	display: flex
	justify-content: center
	align-items: center

.sectionContainer
	width: 1200px
	display: flex
	justify-content: space-between
	align-items: center
	padding: 0 15px 0 15px
	
/* section - 輪播照片 */
.imgBox
	width: 540px
	height: 406px
	position: relative

.imgChange
	width: 100%
	height: 100%
	overflow: hidden
	position: relative

	.imgBar
		width: auto
		height: 100%
		display: flex
		position: absolute
		left: 0px
		transition: 0.5s cubic-bezier(0.65, 0.05, 0.36, 1) 

		.attImg
			object-fit: cover
			max-width: 100%
			min-width: 100%
			display: block


.imgBtn
	cursor: pointer

	.leftBtn
		position: absolute
		top: 50%
		left: 10px
		transform: translate(0, -50%)

	.rightBtn
		position: absolute
		top: 50%
		right: 10px
		transform: translate(0, -50%)

.imgDot
	width: auto
	height: 20px
	position: absolute
	bottom: 10px
	left: 50%
	transform: translate(-50%, 0)
	display: flex
	justify-content: space-evenly;
	align-items: center;

	input[type='radio'] {
		-webkit-appearance: none;
		margin: 3px
		width: 12px
		height: 12px
		border-radius: 12px;
		background-color: rgba(255,255,255,0.8)
		outline: none;
	}

	input[type='radio']:checked:after
		width: 10px;
		height: 10px;
		border-radius: 10px;
		position: relative;
		top: -5px
		right: -1px
		content: '';
		display: inline-block;
		visibility: visible;
		background-color: rgba(0,0,0,0.8)

/* section - 右側資訊區 */
.bookingBox
	width: 600px
	color: $secondary70

.attName
	margin-bottom: 15px

.attCat
	margin-bottom: 20px

.grayArea
	width: 600px
	height: 302px
	background-color: $secondary20
	padding: 15px 20px 15px 20px
	border-radius: 5px
	
.bookTitle
	margin-bottom: 15px

.bookIntro
	line-height: 1.5em

.bookDate
	margin: 24px 5px 24px 0
	.bookDateSelector
		position: relative
		width: 193px
		height: 35px
		padding: 5px 34px 5px 34px
		border-radius: 5px
		border: none
		cursor:pointer

		&:focus
			border: none

	input[type="date"]::-webkit-calendar-picker-indicator {
		cursor:pointer
		margin-right: 15px
		background: url('../../Images/Components/calendar.png') no-repeat;
		position: absolute
		right: 5px
		bottom: 2px
		width: 24px;
		height: 24px;
		}

.bookTime
	margin-bottom: 15px
	margin-right: 5px
	display: flex
	align-items: center

.radioBtnBox
	display: flex
	align-items: center
	cursor pointer


	input[type='radio'] {
		cursor pointer
		-webkit-appearance: none;
		width: 22px;
		height: 22px;
		border-radius: 50%;
		background-color #fff
		margin-right: 5px
	}

	input[type='radio']:checked:after
		width: 18px;
		height: 18px;
		border-radius: 18px;
		position: relative;
		background-color: $primary70
		content: '';
		display: inline-block;
		border: 2px solid white;
		// visibility: visible;

.bookMorningBox
	margin-right: 10px
		

.bookFee
	margin-bottom: 25px	
	margin-right: 5px	
	display: flex
	align-items: center

.bookConfirm
	padding: 10px 20px 10px 20px
	border: 0px
	background-color $primary70
	border-radius: 5px
	color: #ffffff
	width: 154px
	height: 36px
	cursor: pointer

/* info */

.hr
	width: 1200px
	border:1px solid #E8E8E8
	margin-top: 37px
	

.info
	display: flex
	align-items: center
	justify-content: center
	margin-top: 50px
	margin-bottom: 120px

.infoContainer
	width: 1200px
	color: $secondary70
	line-height: 1.5em
	

	.content
		margin-bottom: 20px
		white-space: pre-wrap

	.address
		margin-bottom: 20px

		.addressTitle
			line-height: 32px
		
	.transTitle
		line-height: 32px
			
/* RWD */
@media (max-width: 1200px)
	.section
		flex-wrap: wrap
		min-width: 100%
		margin-top: 54px
		

	.sectionContainer
		width: 100%
		flex-wrap: wrap
		padding: 0px

	.imgBox
		width: 100%
		height: 500px

	.hr
		width: 90%

	.infoContainer
		width: 90%

	.bookingBox
		width: 90%
		margin: 0 auto
		margin-top: 10px
		
	.grayArea
		width: 100%

@media (max-width: 600px)
	.imgBox
		height: 350px