@import "../components/base.styl"

*
	box-sizing: border-box

body
	position:relative

/* section */
.section
	top: 91px
	position: relative
	display: flex
	justify-content: center
	align-items: center
	margin-bottom: 91 + 37px

	&__container
		width: 1200px
		display: flex
		justify-content: space-between
		align-items: center
		padding: 0 15px 0 15px
	
/* section - 輪播照片 */
.img
	width: 540px
	height: 406px
	position: relative
	border-radius: 5px
	overflow:hidden

	&__change
		width: 100%
		height: 100%
		overflow: hidden
		position: relative

	&__bar
		width: auto
		height: 100%
		display: flex
		position: absolute
		left: 0px
		transition: 0.5s cubic-bezier(0.65, 0.05, 0.36, 1) 

	&__att
		object-fit: cover
		max-width: 100%
		min-width: 100%
		display: block


	&__btn
		cursor: pointer

		.leftBtn
			position: absolute
			top: 50%
			left: 10px
			transform: translate(0, -50%)

		.rightBtn
			position: absolute
			top: 50%
			right: 10px
			transform: translate(0, -50%)

.img__dot
	width: auto
	height: 20px
	position: absolute
	bottom: 10px
	left: 50%
	transform: translate(-50%, 0)
	display: flex
	justify-content: space-evenly;
	align-items: center;

	input[type='radio'] {
		-webkit-appearance: none;
		margin: 3px
		width: 12px
		height: 12px
		border-radius: 12px;
		background-color: rgba(255,255,255,0.8)
		outline: none;
		cursor: pointer
	}

	input[type='radio']:checked:after
		width: 10px;
		height: 10px;
		border-radius: 10px;
		position: relative;
		top: -5px
		right: -1px
		content: '';
		display: inline-block;
		visibility: visible;
		background-color: rgba(0,0,0,0.8)

/* section - 右側資訊區 */
.book
	width: 600px
	color: $secondary70

	&__attName
		margin-bottom: 15px

	&__attCat
		margin-bottom: 20px

	&__container
		width: 600px
		height: auto
		background-color: $secondary20
		padding: 15px 20px 15px 20px
		border-radius: 5px
		
	&__title
		margin-bottom: 15px


	&__date
		margin: 24px 5px 24px 0

	&__dateInput
		position: relative
		width: 193px
		height: 35px
		padding: 5px 34px 5px 34px
		border-radius: 5px
		border: none
		cursor:pointer
		transition: 0.3s

		&:focus
			border: none
			transition: 0.3s

		input[type="date"]:focus
			border: none

	&__time
		margin-bottom: 15px
		margin-right: 5px
		display: flex
		align-items: center

	&__timeBox
		margin-right: 10px

	&__fee
		margin-bottom: 25px	
		margin-right: 5px	
		display: flex
		align-items: center


.message
	font-size: 14px
	position: relative
	top: -10px

.radioBtnBox
	display: flex
	align-items: center
	cursor pointer


	input[type='radio'] {
		cursor pointer
		-webkit-appearance: none;
		width: 22px;
		height: 22px;
		border-radius: 50%;
		background-color #fff
		margin-right: 5px
	}

	input[type='radio']:checked:after
		width: 18px;
		height: 18px;
		border-radius: 18px;
		position: relative;
		background-color: $primary70
		content: '';
		display: inline-block;
		border: 2px solid white;
		// visibility: visible;



/* info */
.info
	display: flex
	align-items: center
	justify-content: center
	margin-top: 50px
	margin-bottom: 120px

	&__container
		width: 1200px
		color: $secondary70
		line-height: 1.5em
		

	&__content
		margin-bottom: 20px
		white-space: pre-wrap

.address
	margin-bottom: 20px

	.address__title
		line-height: 32px
	
.trans__Title
	line-height: 32px

/* 照片 loading */
.loading
	width: 540px
	height: 406px
	backdrop-filter: saturate(180%) blur(20px)
	background-color: rgba(256, 256, 256 ,0.7)
	position: absolute
	border-radius: 5px
	display: flex
	justify-content: center
	align-items: center
	opacity: 1

	&__ring 
		display: inline-block;
		position: relative;
		width: 150px;
		height: 150px;
		display: flex
		justify-content: center
		align-items: center

	&__ring div 
		box-sizing: border-box;
		display: block;
		position: absolute;
		width: 80px;
		height: 80px;
		margin: 8px;
		border: 3px solid $secondary50;
		border-radius: 50%;
		animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
		border-color: $secondary50 transparent transparent transparent;
	&__ring div:nth-child(1) 
		animation-delay: -0.45s;
	&__ring div:nth-child(2)
		animation-delay: -0.3s;
	&__ring div:nth-child(3)
		animation-delay: -0.15s;

@keyframes fadeOut {
  0% {
    opacity:1;
  }
  100% {
    opacity:0;
  }
}

@keyframes lds-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading__progress
	text-align: center
	color:  $secondary50
	font-size: 20px


/* skeleton*/
.card
	display: none

.card-template
	display: flex

.attraction__skeleton
	height: auto

.skeleton-text
	width: 95%
	height: 0.7rem
	border-radius: 0.125rem
	margin-bottom: 20px;

	&:nth-child(1) 
		width: 65%
			
/* RWD */
@media (max-width: 1200px)
	.section
		flex-wrap: wrap
		min-width: 100%
		top: 54px
		

	.section__container
		width: 100%
		flex-wrap: wrap
		padding: 0px

	.img
		width: 100%
		height: 500px
		border-radius: 0px

	.loading
		width: 100%
		height: 500px
		top: 0

	.hr
		width: 90%

	.info__container
		width: 90%

	.book
		width: 90%
		margin: 0 auto
		margin-top: 20px
		
	.book__container
		width: 100%

@media (max-width: 600px)
	.img
		height: 350px

	.loading
		height: 350px