@import "../components/base.styl"

mainWidth()
	width: 1200px
	padding: 0 100px 0 100px
	margin: 0 auto
	height: auto
	display: flex
	@media (max-width: 1200px)
		width: 90%
		padding: 0
	@media (max-width: 600px)
		display: flex
		flex: wrap

dangerousCard()
	display:none
	width: 100%
	height: 80px
	margin-top: 30px
	padding: 20px
	background-color #ffebeb
	border-radius: 5px
	border: 1px solid $dangerous
	align-items: center
	color: $dangerous
	font-size: 14px


*
	box-sizing: border-box

html
	background-color #757575
body
	position:relative
	background-color #fff
	padding-top: 90px


.headline
	mainWidth()
	position: relative
	color: $secondary70

.noBooking
	mainWidth()
	top: 40px
	height: 100px
	position: relative
	color: $secondary70

.tripInfo
	display: none

.section
	mainWidth()
	margin-top: 40px
	display: block
	// display: none


.dayTrip
	width: 100%
	height: auto
	display: flex
	justify-content: left
	align-items: center
	padding-bottom: 30px
	padding-top: 50px 
	position: relative
	border-bottom: 1px solid $secondary20

	&:nth-child(1) 
		border-top: 1px solid $secondary20

	&:nth-last-child(1)
		border-bottom: 0

	&__imgBox
		width: 266px
		height: 200px
		overflow: hidden
		border-radius: 5px
		overflow hidden
	
	&__imgAtt
		cursor:pointer
		
	&__img
		width: 100%
		height: 100%
		object-fit: cover
		transition: 0.2s

	&__infoBox
		flex:auto
		margin-left: 20px
		height: 100%
		width: 60%

	&__info
		display: flex
		margin-bottom: 20px
		color: $secondary70
		overflow: hidden
		text-overflow: ellipsis 
		white-space: nowrap 

		&:nth-of-type(4)
			margin-bottom: 0
		
		a&:nth-of-type(1)
			text-decoration: none
			color: $primary70
			transition: 0.2s
			display: inline-block

			&:hover
				filter: brightness(1.3);
				cursor: pointer
				transition: 0.2s

	&__checkboxLabel
		position: absolute
		top: 15px
		left: 0
		display: flex
		align-items: center
		color: #909090
		cursor: pointer

		&:hover
			filter: brightness(1.2);
			transition: 0.2s

	&__checkbox
		width: 25px
		height: 25px	
		margin-right: 10px

	input[type='checkbox']
		cursor pointer
		
	input[type='checkbox']:checked
		accent-color: $primary70;

	&__delete
		position: absolute
		top: 15px
		right: 0
		width: 30px
		height: 30px
		transition: 0.2s

		&:hover
			filter: brightness(0.4)
			cursor: pointer
			transition: 0.2s


.contact
	mainWidth()
	margin-top: 40px
	margin-bottom:40px
	color: $secondary70

	&__box
		width: 100%

	&__info
		margin-top: 30px


.payment
	mainWidth()
	margin-top: 40px
	margin-bottom:40px
	color: $secondary70	
	position: relative

	&__box
		width: 100%

	&__info
		margin-top: 30px
		width: 300px
		display: flex
		align-items: center
		flex-wrap: wrap

.confirm
	mainWidth()
	margin-top: 40px
	margin-bottom:40px

	&__box
		width: 100%
		height: auto
		display: flex
		flex-wrap: wrap
		justify-content: flex-end

	&__fee
		display: flex
		justify-content: flex-end
		width: 100%
		color: $secondary70	

	&__fee
		margin-bottom: 35px

.input
	width: 200px
	height: 38px



.notice
	position relative
	top:0px
	left: 90px

/* skeleton */
// .card
// 	display: none

.card-template
	display: block

.dayTrip__skeleton
	width: 100%
	height: auto

.skeleton-text
	width: 90%
	height: 0.7rem
	border-radius: 0.125rem
	margin-bottom: 20px;

	&:nth-child(1) 
		width: 70%

/* tappay */
.tpfield 
	width: 200px
	height: 38px
	border: 1px solid #E8E8E8
	padding: 10px
	border-radius: 5px
	transition: 0.1s

.tappay-field-focus{
	transition: 0.1s
    border: 2px solid #1a73e8
}
.bookNotice
	dangerousCard()
	margin-top: 15px
	margin-bottom: 15px

.cardNotice
	dangerousCard()

/* 照片 loading */
.loading
	display: none
	width: 100%
	height: 100%
	-webkit-backdrop-filter:saturate(180%) blur(5px);
	backdrop-filter: saturate(180%) blur(5px)
	background-color: rgba(256, 256, 256 ,0.7)
	position: absolute
	top: 0
	opacity: 0
	z-index 2
	// display: flex
	justify-content: center
	align-items: center
	opacity: 0

	&__content
		position: sticky
		top 300px

	&__ring 
		display: inline-block;
		position: relative;
		width: 150px;
		height: 150px;
		display: flex
		justify-content: center
		align-items: center
		margin: 0 auto

	&__ring div 
		box-sizing: border-box;
		display: block;
		position: absolute;
		width: 80px;
		height: 80px;
		margin: 8px;
		border: 3px solid $secondary50;
		border-radius: 50%;
		animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
		border-color: $secondary50 transparent transparent transparent;
	&__ring div:nth-child(1) 
		animation-delay: -0.45s;
	&__ring div:nth-child(2)
		animation-delay: -0.3s;
	&__ring div:nth-child(3)
		animation-delay: -0.15s;

@keyframes fadeIn {
  0% {
    opacity:0;
  }
  100% {
    opacity:1;
  }
}

@keyframes fadeOut {
  0% {
    opacity:1;
  }
  100% {
    opacity:0;
  }
}

@keyframes lds-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading__progress
	text-align: center
	color:  $secondary50
	font-size: 20px

/* RWD */
@media (max-width: 1200px)
	.dayTrip__imgBox
		width: 266px
		height: 200px

	.dayTrip__delete
		position: absolute

	.section
		display: block


@media (max-width: 600px)
	.dayTrip
		width: 100%
		height: auto
		display: flex
		flex-wrap: wrap
		justify-content: left
		position: relative

		&__imgBox
			width: 100%
			height: 200px

		&__infoBox
			width: 90%
			margin-top: 30px
			margin-left: 0

		&____skeleton
			margin-top: 30px
			margin-left: 0
	.section
		display: block

