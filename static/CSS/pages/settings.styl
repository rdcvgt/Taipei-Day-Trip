@import "../components/base.styl"

mainWidth()
	width: 1200px
	padding: 0 100px 0 100px
	margin: 0 auto
	height: auto
	display: flex
	@media (max-width: 1200px)
		width: 90%
		padding: 0
	@media (max-width: 600px)
		display: flex
		flex: wrap

dangerousCard()
	display:none
	width: 100%
	height: 80px
	margin-top: 30px
	padding: 20px
	background-color #ffebeb
	border-radius: 5px
	border: 1px solid $dangerous
	align-items: center
	color: $dangerous
	font-size: 14px


*
	box-sizing: border-box

html
	background-color #757575
body
	position:relative
	background-color #fff
	padding-top: 90px


.noBooking
	mainWidth()
	top: 40px
	height: 100px
	position: relative
	color: $secondary70

.tripInfo
	display: block


.contact
	mainWidth()
	margin-bottom:70px
	color: $secondary70

	&__box
		width: 100%
		display: flex
		flex-wrap: wrap
		justify-content: center
		align-items: center
		position relative

	&__header
		display: block
		width: 550px

	&__info
		margin-top: 30px
	
	&__photoBlock
		width: 550px
		display: flex
		align-items: center

	&__Preview
		width: 80px
		height: 80px
		background-color #fff
		border: 1px solid $secondary20
		border-radius: 50%
		margin-right: 20px
		display: flex
		justify-content: center
		overflow: hidden

	&__photo
		max-height: 100%
		object-fit: cover


	&__button
		width: 80px
		margin-right: 20px
		border-radius: 20px
		background-color #fff
		color: $secondary50
		border: 1px solid $secondary20
		transition: 0.2s
	
		&:hover
			filter: brightness(1);
			box-shadow: 3px 3px 12px  rgba(157, 157, 157, 0.3)
			transition: 0.2s

	&__upload
		display: none



.confirm
	mainWidth()
	margin-top: 40px
	margin-bottom:40px

	&__box
		width: 100%
		height: auto
		display: flex
		flex-wrap: wrap
		justify-content: flex-end

	.cancel
		margin-right: 20px
		background-color #fff
		color: $secondary50
		border: 1px solid $secondary50

.input
	width: 550px
	height: 50px

.notice
	position relative
	top:0px
	margin: 0


/* RWD */

@media (max-width: 600px)
	.contact
		width: 90%
		margin-bottom: 30px

		&__box
			display: block

		&__header
			text-align: center
			width: 100%

		&__photoBlock
			width: 100%

	.input
		width: 100%

	.confirm

		&__box
			width: 100%
			justify-content: center
			flex-direction: column-reverse

		.cancel
			width: 100%
			height: 50px
			margin-right: 0

		.save
			width: 100%
			height: 50px
			margin-bottom: 20px
		



