@import "../components/base.styl"

*
	box-sizing: border-box

body
	position:relative
	
/* [Desktop] Hero section */
.heroSection
	position: relative;
	margin: 0 auto
	width: 100%
	height: 320px
	background-color: #878787
	top:54px
	left:0
	display:flex;
	align-items: center
	justify-content: center
	flex-wrap:wrap

.sectionImgBox
	width: 100%
	height: 100%
	overflow: hidden

	.welcomeImg
		width: 110%
		object-fit: cover;


.sloganContainer
	position absolute
	margin: 0 auto
	width: 1200px

.sloganText
	color: $secondary10

	.mainSlogan
		display: block
		height: 41px

	.secondSlogan
		margin-top: 15px
		display: block
		height: 16px

.sloganSearch
	display: flex
	margin-top: 25px
	
	.searchContainer
		position: relative
		
.searchBar
	width: 400px
	height: 46px
	border-radius: 5px 0px 0px 5px
	outline-style: none
	border: 0px;
	padding: 15px;
	color: $secondary50
	box-shadow: 0px 0px 20px #AABBCC;
	
	&:focus + .categoryList
		visibility: visible
		opacity: 1		

.categoryList
	z-index: 1
	opacity: 0
	visibility: hidden
	transition-duration:0.5s;
	position: absolute
	width: 400px
	height: auto
	background-color #fff
	border-radius: 5px
	box-shadow: 0px 0px 20px #AABBCC;
	margin-top: 5px
	
	.list
		width: 120px
		height: 40px
		padding: 10px 15px
		display: inline-block
		cursor pointer
		transition: 0.2s
		text-align:center 

		&:hover
			background-color: $secondary20
			border-radius: 5px
			transition: 0.2s
			


.searchBtn
	width: 60px;
	height: 46px;
	border-radius: 0px 5px 5px 0px
	background-color: $primary70
	cursor: pointer
	position: relative
	transition: 0.2s

	&:hover
		filter: brightness(1.3);
		transition: 0.2s

	.searchImg
		position: absolute
		left: 50%
		top: 50%
		transform: translate(-50%, -50%)


/* attractions */
.attractionGroup
	width: 1200px
	height: auto
	display: grid
	grid-template-columns: repeat(4, 270px)
	grid-template-rows: repeat(2, 242px)
	grid-gap: 30px;
	padding: 15px
	margin: 106px auto 40px auto
	justify-content: center

.attContainer
	width: 270px
	height: 242px
	border-radius: 5px
	overflow: hidden
	border: 1px solid $secondary20
	cursor: pointer
	text-decoration: none

	&:hover .attImg
		scale: 1.1
		filter: brightness(110%);
		transition: 0.3s
	

	.attMain
		position: relative
		width: 100%
		height: 197px
		overflow: hidden
		
		.attImg
			transition: 0.3s
			overflow: hidden
			display: block
			width: 100%
			height: 100%
			object-fit: cover;
			aspect-ratio: unset; 

.attNameArea
	position: absolute
	bottom: 0
	width: 100%
	height: 40px
	background-color: rgba(0,0,0,0.6)
	display: flex
	align-items: center
	padding: 10px

.attName
	opacity: none;
	color: #ffffff

.attInfo
	width: 100%
	height: 45px
	display: flex
	justify-content: space-between
	align-items: center
	color: $secondary50
	padding: 10px

.endMessage
	width: 100%
	height: 60px
	margin-bottom: 20px
	display: flex
	justify-content: center
	align-items: center
	color: $secondary50
	
/* skeleton */
.card
	display: none

.card-template
	display: grid

.skeleton-edit
	background-color: rgba(0, 0, 0, 0.2)

.skeleton-text
	height: 0.8rem
	border-radius: 0.125rem

.attName.skeleton-text
	width: 180px

.attInfoTrans.skeleton-text
	width: 50px

.attInfoCat.skeleton-text
	width: 120px


@media (max-width: 1200px)
	.welcomeImg
		height: 320px

	.sloganContainer
		width: 90%

		.searchBar
			width: 230px

		.categoryList
			width: 322px

			.list
				width: 96px

	.attractionGroup
		width: 90%
		grid-template-columns: repeat(2, 50%)
		grid-template-rows: repeat(2, 242px)

		.attContainer
			width: 100%
			height: 242px


@media (max-width: 600px)
	.attractionGroup
		width: 90%
		grid-template-columns: repeat(1, 322px)
		grid-template-rows: repeat(2, 280px)

