@import "../components/base.styl"

mainWidth()
	width: 1200px
	padding: 0 100px 0 100px
	margin: 0 auto
	height: auto
	display: flex
	@media (max-width: 1200px)
		width: 90%
		padding: 0
	@media (max-width: 600px)
		display: flex
		flex: wrap


*
	box-sizing: border-box

html
	background-color #757575
body
	position:relative
	background-color #fff
	padding-top: 90px


.headline
	mainWidth()
	position: relative
	color: $secondary70

.noOrder
	mainWidth()
	top: 40px
	height: 100px
	position: relative
	color: $secondary70

.tripInfo
	display: none

.section
	mainWidth()
	margin-top: 40px


.dayTrip
	width: 100%
	height: auto
	display: flex
	justify-content: left
	align-items: center
	margin-bottom: 40px 
	position: relative

	&:nth-of-type(n)
		margin-bottom: 0px

	&__imgBox
		width: 266px
		height: 200px
		overflow: hidden
		border-radius: 5px
		display: flex
		align-items: center
	
	&__imgAtt
		cursor:pointer
		
	&__img
		width: 110%
		height: 100%
		object-fit: cover
		transition: 0.2s
	
	&__statusImg
		width: 100%
		height: 60%
		object-fit: contain

	&__infoBox
		flex:auto
		margin-left: 20px
		align-items: center

	&__info
		display: flex
		margin-bottom: 20px
		color: $secondary70


		a&:nth-of-type(1)
			text-decoration: none
			margin-bottom: 30px
			color: $primary70
			transition: 0.2s

			&:hover
				filter: brightness(1.3);
				cursor: pointer
				transition: 0.2s


.confirm
	mainWidth()
	margin-top: 40px
	margin-bottom:40px
	
	&__box
		width: 100%
		height: auto
		display: flex
		flex-wrap: wrap
		justify-content: flex-end
	
	.confirmBtn
		margin-left: 20px

	.backToBooking
		display: none
		background-color #fff
		border: 1px solid $primary70
		color: $primary70

.hr
	margin-top: 30px
	margin-bottom: 30px

.input
	width: 200px
	height: 38px

.notice
	position relative
	top:0px
	left: 90px

/* skeleton */
.card
	display: none

.card-template
	display: block

.dayTrip__skeleton
	width: 100%
	height: auto

.skeleton-text
	width: 90%
	height: 0.7rem
	border-radius: 0.125rem
	margin-bottom: 20px;

	&:nth-child(1) 
		width: 70%


/* RWD */
@media (max-width: 1200px)
	.dayTrip__delete
		position: absolute
		top: auto
		bottom: -30px


@media (max-width: 600px)
	.dayTrip
		width: 100%
		height: auto
		display: flex
		flex-wrap: wrap
		justify-content: left
		margin-bottom: 40px 
		position: relative

		&__imgBox
			width: 100%
			height: 200px

		&__infoBox
			width: 100%
			margin-top: 30px
			margin-left: 0

		&____skeleton
			margin-top: 30px
			margin-left: 0
		

